<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/CSTRLYT_hobcat"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/DARK_bg_shadow">

    <Button
        android:id="@+id/BTN_hobcats_addhob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/cute_font"
        android:text="Mach Neu"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/BTN_hobcats_yeetcat"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TV_hobcat_cattit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/philosopher"
        android:text="CatTit"
        android:textColor="@color/DARK_txt"
        android:textSize="38sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/BTN_hobcats_addhob"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/RCLV_hobcat_hobs"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/DARK_bg"
        app:layout_constraintBottom_toTopOf="@+id/frameLayout6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TV_hobcat_debug" />

    <TextView
        android:id="@+id/TV_hobcat_debug"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/philosopher"
        android:paddingBottom="8dp"
        android:text="TextView"
        android:textColor="@color/DARK_txt"
        app:layout_constraintStart_toStartOf="@+id/TV_hobcat_cattit"
        app:layout_constraintTop_toBottomOf="@+id/TV_hobcat_cattit" />

    <Button
        android:id="@+id/BTN_hobcats_yeetcat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/ACC_3"
        android:fontFamily="@font/cute_font"
        android:text="yeet"
        android:textAllCaps="false"
        android:textSize="28sp"
        android:textStyle="bold"
        android:typeface="serif"
        app:layout_constraintBottom_toBottomOf="@+id/BTN_hobcats_addhob"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/BTN_hobcats_addhob" />

    <FrameLayout
        android:id="@+id/frameLayout6"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/DARK_txt_hilite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>